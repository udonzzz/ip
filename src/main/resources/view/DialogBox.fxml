<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" stylesheets="@../css/dialog-box.css" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- ChatGPT used to figure out how to add additional design element of a bamboo to the dialog box -->
        <StackPane alignment="TOP_RIGHT">
            <HBox.margin>
                <Insets left = "7.0" right="7.0"/>
            </HBox.margin>
            <children>
                <ImageView fx:id="bambooDecoration" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" visible="false" StackPane.alignment="TOP_RIGHT" rotate="30">
                    <StackPane.margin>
                        <Insets top="-25.0" right="-25.0" />
                    </StackPane.margin>
                </ImageView>

                <Label fx:id="dialog" minHeight="-Infinity" text="Label" wrapText="true">
                    <padding>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </padding>
                </Label>
            </children>
        </StackPane>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="20.0" />
    </padding>
</fx:root>
